# Server
NODE_ENV=development
PORT=5000
API_VERSION=v1
CLIENT_URL=http://localhost:3000

# Auth Strategy
# - local: use this backend's JWT + Mongo passwords (legacy)
# - supabase: verify Supabase Auth JWTs; Supabase handles email verification + password reset
AUTH_STRATEGY=local

# Supabase Auth (only required when AUTH_STRATEGY=supabase)
SUPABASE_URL=https://<your-project-ref>.supabase.co
# Backend-only (do NOT use in frontend)
SUPABASE_SERVICE_ROLE_KEY=<your-supabase-service-role-key>
# Public (safe for frontend, also used by backend for some auth endpoints)
SUPABASE_ANON_KEY=<your-supabase-anon-key>
# Optional overrides
SUPABASE_JWT_AUDIENCE=authenticated
# SUPABASE_JWT_ISSUER=https://<your-project-ref>.supabase.co/auth/v1
# SUPABASE_JWKS_URL=https://<your-project-ref>.supabase.co/auth/v1/certs

# Database (MongoDB is being removed for Supabase-only migration)
MONGODB_URI=mongodb://localhost:27017/university_portal
MONGODB_TEST_URI=mongodb://localhost:27017/university_portal_test

# JWT
JWT_ACCESS_SECRET=your_super_secret_access_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email (Gmail)
# Optional if you are using Supabase Auth for verification/reset.
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=University Portal <noreply@university.edu>

# Redis (optional, will fallback to memory if not available)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 2FA
TWO_FACTOR_APP_NAME=University Portal
TWO_FACTOR_CODE_EXPIRY=300

# Payment (Paystack - for future integration)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYMENT_MODE=test

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# CORS
CORS_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_change_this_in_production_min_32_characters
